<div id="sidebar">
	<ul id="sidebar-nav">
		<li>Welcome <%= currentUser.firstName %></li>
		<% const agentVerificationStatus = currentUser.verificationStatus || 'approved'; %>
		<% const agentVerified = agentVerificationStatus === 'approved'; %>
		<% if (!agentVerified) { %>
			<li class="text-warning">Status: <%= agentVerificationStatus %></li>
		<% } %>
		<li><a href="/agent/dashboard">Dashboard</a></li>
		<li>
			<% if (agentVerified) { %>
				<a href="/agent/collections/pending">My Pending Collections</a>
			<% } else { %>
				<span class="text-muted">Pending Collections (locked)</span>
			<% } %>
		</li>
		<li><a href="/agent/track">Live Tracking</a></li>
		<li><a href="/agent/proofs">Photo Proofs</a></li>
		<li><a href="/agent/collections/previous">My Previous Collections</a></li>
		<li><a href="/agent/profile">My Profile</a></li>
		<li><a href="/agent/verification">Verification Status</a></li>
		<li><a href="/auth/logout" class="btn">Logout</a></li>
	</ul>
</div>